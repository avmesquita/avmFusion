    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd>@Html.DisplayFor(model => model.Nome)</dd>

        <dt>&nbsp;</dt>
        <dd>&nbsp;</dd>

        <dt>@Html.DisplayNameFor(model => model.Serial)</dt>
        <dd>@Html.DisplayFor(model => model.Serial)</dd>

        <dt>&nbsp;</dt>
