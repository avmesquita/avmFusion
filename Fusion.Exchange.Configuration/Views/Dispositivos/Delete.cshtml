        <dt>&nbsp;</dt>
        <dd>&nbsp;</dd>

        <dt>@Html.DisplayNameFor(model => model.Ativo)</dt>
        <dd>@Html.DisplayFor(model => model.Ativo)</dd>
    </dl>

    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Excluir" class="btn btn-large btn-danger" title="Efetiva a Exclusão" />
            <br /><br /><br /><br />
            @Html.ActionLink("Voltar", "Index", new { id = Model.CodigoCliente }, new { @class = "btn btn-default" })
        </div>
    }
