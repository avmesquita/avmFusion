                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <!--<hr />-->
    </div>

    <footer style="position:fixed;bottom:0;margin-left:0;width:100%;background-color:#2c3e68;color:#fff;height:20px;" id="avmfooter">
        <p style="margin-left:4px;color:white;">&copy; @DateTime.Now.Year - <a href="http://www.Fusion.com.br" style="color:white;">AVM Sistemas</a></p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
