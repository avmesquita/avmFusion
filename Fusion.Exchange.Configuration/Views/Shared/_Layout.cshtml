                                <li>@Html.ActionLink("Status dos Dispositivos", "StatusDispositivos", "Gestao", new { area = "", id = User.Identity.GetCodigoCliente() }, null)</li>
                                <li>@Html.ActionLink("Status das Salas", "GetExchangeRooms", "Gestao", new { area = "", id = User.Identity.GetCodigoCliente() }, null)</li>
                            </ul>
                        </li>
