                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Todos", "Todos", "Dispositivo", new { area = "" }, null)</li>
                                    <li>@Html.ActionLink("Não Pareados", "NaoPareados", "Dispositivo", new { area = "" }, null)</li>
                                    <li>@Html.ActionLink("Parear Novo", "ParearNovo", "Dispositivo", new { area = "" }, null)</li>
                                </ul>
                            </li>
                        *@
                    }
                    @*
                            @if (HttpContext.Current.User.Identity.Name == "")
                            {
                                <li><a href="http://Fusionconferenceauditor.azurewebsites.net">Painel</a></li>

                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Configurações</a>
                                    <ul class="dropdown-menu">
                                        <li>@Html.ActionLink("Clientes", "Index", "Clientes", new { area = "" }, null)</li>
                                    </ul>
                                </li>

                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">API</a>
                                    <ul class="dropdown-menu">
                                        <li><a href="http://Fusionexchangearduino.azurewebsites.net/swagger">Device State Service</a></li>
