@using Microsoft.AspNet.Identity
@using Fusion.Exchange.Configuration.Extensions
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>AVM Sistemas</title>
    <meta name="description" content="Portal do Produto Fusion Sala de Reunião (IoT)">
    <meta name="keywords" content="sala,reuniao,meeting,room,office365,exchange,Fusion,microsoft,iot">
    <link rel="dns-prefetch" href="//www.Fusion.com.br">
    <link rel="dns-prefetch" href="//cdn.Fusion.com.br">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
        
    @Html.Action("GoogleAnalytics", "MarketingTags")
    
</head>
