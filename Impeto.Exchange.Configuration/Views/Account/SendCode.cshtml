@model Impeto.Exchange.Configuration.Models.SendCodeViewModel
@{
    ViewBag.Title = "Envio de Código de Verificação";
}
<br /><br /><br />
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) {
    @Html.AntiForgeryToken()
    @Html.Hidden("rememberMe", @Model.RememberMe)
    <h4>Envio de Código de Verificação</h4>
    <hr />
    <div class="row">
        <div class="col-md-8">
            Selecione o Serviço de Autenticação Por Dois Fatores:
            @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
            <input type="submit" value="Submit" class="btn btn-default btn-success" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
